* {
	margin: 0;
	padding: 0;
}

body {
	background: #E5E5E5;
/* 	font-family: "宋体"; */
}

.loginBox {
	width: auto;
	height: auto;
	padding: 0 5px;
	margin-top: 15px;	
	font: 11px/1.5em 'Microsoft YaHei';
	position: absolute;
	left: 50%;
	top: 50%;
	margin-left: -230px;
	margin-top: -165px;
}

.loginBox h2 {
	height: 45px;
	font-size: 20px;
	font-weight: normal;
}

.loginBox .left {
	border-right: 1px solid #ccc;
	height: 100%;
	padding-right: 45px;
}

.regBtn {
	margin-top: 21px;
}

.container {
	border: 1px solid #fff;
	color: #000;
	background: white;
	background: -moz-linear-gradient(top, #fff, #efefef 8%);
	background: -webkit-gradient(linear, 0 0, 0 100%, from(#f6f6f6),
		to(#f4f4f4));
	font: 11px/1.5em 'Microsoft YaHei';
	box-shadow: 0 0 15px #222;
	width: 1170px;
	height: 482px;
}