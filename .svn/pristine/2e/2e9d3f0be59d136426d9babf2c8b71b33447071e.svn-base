/* CSS Document */
*{
	margin:0;
	padding:0;
	font-family:"微软雅黑";
}
.top{
	width:100%;
	height:100px;
	background-image:url(../images/index/topbar.png);
	background-repeat:repeat-x;
}
.shadow{
	width:100%;
	height:9px;
	background-color:#CCC;
	background-image:url(../images/index/foot.png);
	background-position:0px 0px;
	background-repeat:no-repeat;
}
.searchbox{
	position:relative;
	top:20px;
	margin:0 auto;
	width:360px;
	height:40px;
	border-radius:20px;
	background-color:#FFF;
	box-shadow:0px -2px 10px #CCC inset;
}
.type{
	position:relative;
	top:10px;
	display:inline-block;
	margin-left:40px;
	width:60px;
	height:40px;
	float:left;
}
.searchtext{
	position:relative;
	top:10px;
	display:inline-block;
	width:195px;
	height:40px;
	float:left;
}
.searchtext input{
	float:left;
	border:none;
	outline:none;
	font-size:16px;
}
.searchbtn{
	position:relative;
	top:10px;
	display:inline-block;
	width:50px;
	height:40px;
	background-position:12px -115px;
	background-repeat:no-repeat;
}
