<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
      "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xdsoft.mvc.mapper.BonusCountDao">

	<!--查询剩余可抢单的数量 -->
	<select id="queryRemainingCount" resultType="java.util.Map">
		select * from
		bonuscount bc where bc.active_id = #{active_id}
	</select>

	<!-- 更新剩余的可抢单数量 -->
	<update id="updateCount" parameterType="java.util.Map"
		flushCache="true">
		update bonuscount
		set bonustotal = #{bonustotal}
		where
		active_id = #{active_id}
	</update>
</mapper>